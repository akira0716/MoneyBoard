<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MoneyBoard.Views.UncategorizedTransactionsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:MoneyBoard.Converters"
    xmlns:vm="clr-namespace:MoneyBoard.ViewModels"
    Title="Manage Transaction Categories">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid
        Padding="10"
        RowDefinitions="Auto, *, Auto"
        RowSpacing="10">

        <!--  フィルター切り替え  -->
        <HorizontalStackLayout
            Grid.Row="0"
            Padding="5"
            Spacing="10">
            <Label
                FontAttributes="Bold"
                Text="表示:"
                VerticalOptions="Center" />
            <RadioButton
                Content="未分類のみ"
                GroupName="FilterGroup"
                IsChecked="{Binding ShowOnlyUncategorized}" />
            <RadioButton
                Content="すべて"
                GroupName="FilterGroup"
                IsChecked="{Binding ShowOnlyUncategorized, Converter={StaticResource InvertedBoolConverter}}" />
        </HorizontalStackLayout>

        <!--  利用名リスト  -->
        <CollectionView
            Grid.Row="1"
            ItemsSource="{Binding UsageNameMappings}"
            SelectedItem="{Binding SelectedUsageNameMapping}"
            SelectionChangedCommand="{Binding SelectUsageNameMappingCommand}"
            SelectionChangedCommandParameter="{Binding SelectedUsageNameMapping}"
            SelectionMode="Single">
            <CollectionView.Header>
                <Label
                    Padding="5,10"
                    FontAttributes="Bold"
                    FontSize="14"
                    Text="利用名を選択してカテゴリーを割り当て・変更:" />
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:UsageNameMapping">
                    <Frame Margin="5" Padding="12">
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="10">
                            <VerticalStackLayout Grid.Column="0" Spacing="4">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="15"
                                    Text="{Binding UsageName}"
                                    TextColor="{AppThemeBinding Light=Black,
                                                                Dark=White}" />
                                <HorizontalStackLayout IsVisible="{Binding HasCategory}" Spacing="5">
                                    <Label
                                        FontSize="12"
                                        Text="現在:"
                                        TextColor="{AppThemeBinding Light=#666666,
                                                                    Dark=#AAAAAA}" />
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="12"
                                        Text="{Binding CurrentCategory.Name}"
                                        TextColor="{AppThemeBinding Light=#512BD4,
                                                                    Dark=#ac99ea}" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                            <Label
                                Grid.Column="1"
                                FontAttributes="Bold"
                                FontSize="16"
                                IsVisible="{Binding HasCategory}"
                                Text="✓"
                                TextColor="Green"
                                VerticalOptions="Center" />
                        </Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup Name="CommonStates">
                                <VisualState Name="Normal">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=White, Dark=#2A2A2A}" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState Name="Selected">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="LightBlue" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.EmptyView>
                <ContentView>
                    <VerticalStackLayout
                        HorizontalOptions="Center"
                        Spacing="10"
                        VerticalOptions="Center">
                        <Label
                            FontSize="16"
                            HorizontalOptions="Center"
                            Text="該当する利用名がありません"
                            TextColor="#B0B0B0" />
                    </VerticalStackLayout>
                </ContentView>
            </CollectionView.EmptyView>
        </CollectionView>

        <!--  カテゴリー選択エリア  -->
        <Frame
            Grid.Row="2"
            Padding="15"
            BackgroundColor="{AppThemeBinding Light=#F5F5F5,
                                              Dark=#1E1E1E}"
            IsVisible="{Binding IsUsageNameSelected}">
            <VerticalStackLayout Spacing="12">
                <Label
                    FontAttributes="Bold"
                    FontSize="14"
                    Text="{Binding SelectedUsageNameMapping.DisplayText, StringFormat='選択中: {0}'}" />
                <Picker
                    Title="カテゴリーを選択"
                    BackgroundColor="{AppThemeBinding Light=White,
                                                      Dark=#2A2A2A}"
                    ItemDisplayBinding="{Binding Name}"
                    ItemsSource="{Binding AvailableCategories}"
                    SelectedItem="{Binding SelectedCategory}" />
                <Button
                    Command="{Binding AssignCategoryCommand}"
                    HorizontalOptions="Fill"
                    Text="カテゴリーを割り当て・変更" />
            </VerticalStackLayout>
        </Frame>

    </Grid>
</ContentPage>