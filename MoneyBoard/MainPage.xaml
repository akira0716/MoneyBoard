<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MoneyBoard.Models"
             x:Class="MoneyBoard.MainPage"
             Title="MoneyBoard">

    <Grid RowDefinitions="Auto, *, Auto" Padding="20" RowSpacing="10">
        <!-- Month Selection -->
        <Picker Grid.Row="0"
                Title="Select Month"
                ItemsSource="{Binding AvailableMonths}"
                SelectedItem="{Binding SelectedMonth}"
                Margin="0,0,0,10"/>

        <!-- Summary Display -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding SummaryItems}">
            <CollectionView.Header>
                <Grid ColumnDefinitions="*,Auto,Auto" Padding="5" BackgroundColor="LightGray">
                    <Label Grid.Column="0" Text="Category" FontAttributes="Bold"/>
                    <Label Grid.Column="1" Text="Amount" FontAttributes="Bold" HorizontalTextAlignment="End"/>
                    <Label Grid.Column="2" Text="%" FontAttributes="Bold" HorizontalTextAlignment="End"/>
                </Grid>
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:CategorySummary">
                    <Grid ColumnDefinitions="*,Auto,Auto" Padding="5">
                        <Label Grid.Column="0" Text="{Binding CategoryName}"/>
                        <Label Grid.Column="1" Text="{Binding TotalAmount, StringFormat='{0:C}'}" HorizontalTextAlignment="End"/>
                        <Label Grid.Column="2" Text="{Binding Percentage, StringFormat='{0:F2}%'}" HorizontalTextAlignment="End"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Navigation Buttons -->
        <VerticalStackLayout Grid.Row="2" Spacing="10" Margin="0,20,0,0">
            <Button
                Text="CSVファイルを読み込む" 
                Command="{Binding LoadCsvCommand}"
                HorizontalOptions="Fill" />

            <Button
                Text="カテゴリーを管理する" 
                Command="{Binding GoToCategoryManagementCommand}"
                HorizontalOptions="Fill" />

            <Button
                Text="未分類の取引を整理" 
                Command="{Binding GoToUncategorizedTransactionsCommand}"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
